    <!-- Toast Notification Container (A non-critical element) -->
    <div id="toast-container" aria-live="polite" aria-atomic="true" class="fixed bottom-4 right-4 z-50 space-y-2">
        <!-- Toasts will be injected here by JavaScript -->
    </div>

    <!-- JavaScript for Mobile Menu, Smooth Scrolling, and Form Interaction -->
    <script>
        // DOM Elements
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const contactForm = document.getElementById('contactForm');
        const submitBtn = document.getElementById('submitBtn');
        const toastContainer = document.getElementById('toast-container');

        /**
         * Creates and displays a toast notification.
         * @param {string} message - The message to display.
         * @param {string} type - 'success' or 'error'.
         */
        function showToast(message, type) {
            const isSuccess = type === 'success';
            const toast = document.createElement('div');
            
            toast.className = `p-4 rounded-lg shadow-xl text-sm font-semibold transition-opacity duration-300 opacity-0 transform translate-y-2 max-w-xs`;
            toast.role = 'alert';
            toast.textContent = message;

            if (isSuccess) {
                toast.classList.add('bg-light-green', 'text-deep-green', 'border-l-4', 'border-green-800');
            } else {
                toast.classList.add('bg-red-100', 'text-red-800', 'border-l-4', 'border-red-600');
            }

            toastContainer.appendChild(toast);

            // Animate in
            setTimeout(() => {
                toast.classList.remove('opacity-0', 'translate-y-2');
                toast.classList.add('opacity-100', 'translate-y-0');
            }, 10);

            // Animate out and remove after 5 seconds
            setTimeout(() => {
                toast.classList.remove('opacity-100', 'translate-y-0');
                toast.classList.add('opacity-0', 'translate-y-2');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        // 1. Mobile Menu Toggle
        mobileMenuBtn.addEventListener('click', function() {
            const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
            mobileMenu.classList.toggle('hidden');
            mobileMenuBtn.setAttribute('aria-expanded', !isExpanded);
        });

        // 2. Smooth Scrolling and Mobile Menu Closure
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                // Only prevent default for internal hash links
                if (this.getAttribute('href').length > 1) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    
                    document.querySelector(targetId).scrollIntoView({
                        behavior: 'smooth'
                    });
                    
                    // Hide mobile menu if visible
                    if (!mobileMenu.classList.contains('hidden')) {
                         mobileMenu.classList.add('hidden');
                         mobileMenuBtn.setAttribute('aria-expanded', 'false');
                    }
                }
            });
        });

        // 3. Form Submission Handler with Loading/Disabled States
        contactForm.addEventListener('submit', function(e) {
            e.preventDefault(); 
            
            // Basic client-side validation (browser handles 'required' for the most part)
            if (!contactForm.checkValidity()) {
                 showToast('Please fill out all required fields.', 'error');
                 return;
            }

            // Set Loading/Disabled state
            submitBtn.textContent = 'Sending...';
            submitBtn.disabled = true;
            submitBtn.setAttribute('aria-busy', 'true');


            // Simulate server request delay
            setTimeout(() => {
                // Clear the form fields
                contactForm.reset();

                // Restore button state
                submitBtn.textContent = 'Send Message';
                submitBtn.disabled = false;
                submitBtn.setAttribute('aria-busy', 'false');

                // Display a success message toast
                showToast('Message sent! We received your inquiry.', 'success');
            }, 1500);
        });
    </script>
</body>
